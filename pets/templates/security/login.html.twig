{% extends 'base.html.twig' %}

{% block title %}PETS Login{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    <h1 class="h3 mb-3 font-weight-normal">P.E.T.S Login</h1>
    <label for="inputEmail">Email</label>
    <input type="email" placeholder='seuemail@yahoo.com' value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Senha</label>
    <input type="password" placeholder='Sua Senha' name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-primary" type="submit">
        Acessar
    </button>
</form>
{% endblock %}
